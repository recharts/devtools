{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2020",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "jsx": "react",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}